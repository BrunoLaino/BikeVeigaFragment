<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pedaling.PedalingFragment" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/validity"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textDuracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duração:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCalorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calorias:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVelMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocidade media:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/inicarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="iniciar"
            android:text="Iniciar"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/pararButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="parar"
            android:text="parar" />
    </LinearLayout>
</FrameLayout>